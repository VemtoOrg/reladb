{
  "name": "@tiago_silva_pereira/reladb",
  "version": "2.0.0",
  "type": "module",
  "description": "A relational database layer on top of LocalStorage",
  "main": "main.js",
  "scripts": {
    "test": "jest --runInBand",
    "test:basic": "jest --runInBand --selectProjects behavior unit default",
    "test:default": "jest --runInBand --selectProjects default",
    "test:behavior": "jest --runInBand --selectProjects behavior",
    "perf": "node ./performance/test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TiagoSilvaPereira/reladb.git"
  },
  "keywords": [
    "database",
    "relational",
    "localstorage",
    "browser",
    "db",
    "sync"
  ],
  "author": "Tiago Silva Pereira Rodrigues",
  "license": "SEE LICENSE IN LICENSE.md",
  "bugs": {
    "url": "https://github.com/TiagoSilvaPereira/reladb/issues"
  },
  "homepage": "https://github.com/TiagoSilvaPereira/reladb#readme",
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.10.4",
    "jest": "^26.4.2"
  },
  "dependencies": {
    "moment": "^2.29.0",
    "pluralize": "^8.0.0",
    "uuid": "^8.3.1"
  },
  "jest": {
    "bail": true,
    "projects": [
      {
        "displayName": "behavior",
        "testMatch": [
          "<rootDir>/tests/behavior/*.test.js"
        ]
      },
      {
        "displayName": "unit",
        "testMatch": [
          "<rootDir>/tests/unit/*.test.js"
        ]
      },
      {
        "displayName": "default",
        "testMatch": [
          "<rootDir>/tests/localstorage/*.test.js"
        ]
      }
    ]
  },
  "directories": {
    "test": "tests"
  }
}
